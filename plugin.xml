<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="de.unipaderborn.visuflow.ui.VisuflowEditorPerspective"
            id="visuflow-plugin.perspective.editor"
            name="Visuflow">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="GraphStreamFeasibility"
            name="Visuflow">
      </category>
      <view
            category="GraphStreamFeasibility"
            class="graphstreamfeasibility.views.SampleView"
            icon="icons/sample.gif"
            id="graphstreamfeasibility.views.SampleView"
            name="Jimple">
      </view>
      <view
            category="GraphStreamFeasibility"
            class="de.unipaderborn.visuflow.graphdisplaycomponent.CFGViewPart"
            icon="icons/sample.gif"
            id="de.unipaderborn.visuflow.graphdisplaycomponent.CFGViewPart"
            name="CFG">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="graphstreamfeasibility.views.SampleView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
      point="org.eclipse.ui.menus">
   <menuContribution
         allPopups="false"
         locationURI="popup:#AbstractTextEditorRulerContext?after=additions">
      <command
            commandId="JimpleEditor.JimpleEditorBreakpoint"
            label="ToggleBreakpoint"
            style="push">
      </command>
   </menuContribution>
   <menuContribution
         allPopups="false"
         locationURI="popup:#AbstractTextEditorRulerContext?after=additions">
      <command
            commandId="GraphStreamFeasibility.sourceCodeCommand"
            label="View Java Source"
            style="push">
      </command>
   </menuContribution>
</extension>
<extension
      point="org.eclipse.ui.commands">
   <command
         id="JimpleEditor.JimpleEditorBreakpoint"
         name="name">
   </command>
   <command
         id="GraphStreamFeasibility.sourceCodeCommand"
         name="sourceCodeCommand">
   </command>
</extension>
<extension
      point="org.eclipse.ui.handlers">
   <handler
         class="de.unipaderborn.visuflow.debug.handlers.JimpleBreakPointHandler"
         commandId="JimpleEditor.JimpleEditorBreakpoint">
   </handler>
   <handler
         class="de.unipaderborn.visuflow.debug.handlers.ViewJavaSource"
         commandId="GraphStreamFeasibility.sourceCodeCommand">
   </handler>
</extension>

<extension
         id="JimpleBuilder.JimpleBuilder"
         name="Jimple Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="de.unipaderborn.visuflow.builder.JimpleBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="JimpleBuilder.VisuFlowNature"
         name="VisuFlow Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="de.unipaderborn.visuflow.builder.VisuFlowNature">
         </run>
      </runtime>
      <builder
            id="JimpleBuilder.JimpleBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="VisuFlow Project Nature commands"
            id="JimpleBuilder.VisuFlowNature.category">
      </category>
      <command
            name="Add/RemoveVisuFlow Project Nature"
            defaultHandler="de.unipaderborn.visuflow.builder.AddRemoveVisuFlowNatureHandler"
            categoryId="JimpleBuilder.VisuFlowNature.category"
            id="JimpleBuilder.addRemoveVisuFlowNature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="JimpleBuilder.addRemoveVisuFlowNature"
               label="Disable Jimple Builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              value="JimpleBuilder.VisuFlowNature"
                              property="org.eclipse.core.resources.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="JimpleBuilder.addRemoveVisuFlowNature"
               label="Enable Jimple Builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 value="JimpleBuilder.VisuFlowNature"
                                 property="org.eclipse.core.resources.projectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   
</plugin>
